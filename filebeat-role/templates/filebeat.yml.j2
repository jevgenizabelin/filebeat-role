filebeat.inputs:
- type: log
  enabled: true
  paths:
    - /var/log/syslog
    - /var/log/auth.log
output.logstash:
  hosts: ["{{ hostvars['f-instance']['ansible_facts']['default_ipv4']['address'] }}:5044"]
setup.kibana:
  host: "http://{{ hostvars['k-instance']['ansible_facts']['default_ipv4']['address'] }}:5601"
filebeat.config.modules:
  path: ${path.config}/modules.d/*.yml

