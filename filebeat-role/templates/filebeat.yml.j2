filebeat.inputs:
- type: log
  enabled: true
  paths:
    - /var/log/*.log
    - /var/log/syslog
    - /var/log/auth.log
    - /var/log/messages
output.logstash:
  hosts: ["{{ hostvars['log-instance']['ansible_facts']['default_ipv4']['address'] | default('0.0.0.0') }}:5044"]
setup.kibana:
  host: "http://{{ hostvars['k-instance']['ansible_facts']['default_ipv4']['address'] | default('0.0.0.0') }}:5601"
filebeat.config.modules:
  path: ${path.config}/modules.d/*.yml

